@* ReSharper disable SuggestVarOrType_SimpleTypes *@

@model ListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model.List)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @Html.ActionLink("Edit", nameof(ActionNames.Edit), new
                {
                    id = item.ID,
                    ret = Url.Action(nameof(ActionNames.Index), nameof(ControllerNames.Demo))
                }) |
                @Html.ActionLink("Details", nameof(ActionNames.Details), new { id = item.ID })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Logout", nameof(ActionNames.Logout))
<br />
<br />
@Html.ActionLink("Generate Authentication Error", nameof(ActionNames.GenerateAuthenticationError))
<br />
@Html.ActionLink("Generate Authorization Error", nameof(ActionNames.GenerateAuthorizationError))
<br />
@Html.ActionLink("Generate Not Found Error", nameof(ActionNames.GenerateNotFoundError))
<br />
@Html.ActionLink("Generate Arbitrary Error", nameof(ActionNames.GenerateArbitraryError))
