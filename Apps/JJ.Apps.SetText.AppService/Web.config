<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="jj.framework.persistence" type="JJ.Framework.Configuration.ConfigurationSectionHandler, JJ.Framework.Configuration" />
  </configSections>

  <jj.framework.persistence
    contextType="NHibernate"
    dialect="SqlServer2008"
    location="Data Source=.\SQLEXPRESS;Initial Catalog=SetTextDB_DEV;User ID=development;Password=development;Persist Security Info=True"
    modelAssembly="JJ.Models.SetText"
    mappingAssembly="JJ.Models.SetText.Persistence.NHibernate">
    <repositoryAssemblies>
      <repositoryAssembly>JJ.Models.SetText.Persistence.NHibernate</repositoryAssembly>
      <repositoryAssembly>JJ.Models.SetText.Persistence</repositoryAssembly>
    </repositoryAssemblies>
  </jj.framework.persistence>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>

  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5"/>
  </system.web>

  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <protocolMapping>
      <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>

  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>
</configuration>
